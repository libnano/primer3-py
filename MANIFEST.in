# Package metadata
include pyproject.toml setup.cfg
include README.md LICENSE CHANGES AUTHORS
include .pre-commit-config.yaml

# Documentation
include docs/Makefile docs/conf.py
include docs/*.md
include docs/api/*.md
recursive-include docs *.rst *.py *.md

# Source files
include primer3/*.pxd primer3/*.pxi primer3/*.pyx primer3/*.h
recursive-include primer3/src/libprimer3 *.h *.c *.txt *.ds *.dh Makefile
include primer3/src/libprimer3/klib/khash.h
include primer3/src/libprimer3/klib/README.md

# Tests and examples
recursive-include tests *.py *_input thal_output
recursive-include examples *.py

# Debug and profiling
include valgrind-python.supp

# Exclude generated files
global-exclude *.pyc *.pyo *.pyd *.so *.dylib *.dll
global-exclude __pycache__/ *.egg-info/
global-exclude .DS_Store
global-exclude .*.swp
prune primer3/thermoanalysis.c
